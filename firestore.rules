rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // DEV RULES - replace with auth/App Check based rules for production
    match /popularDrinks/{docId} {
      allow read, write: if true;
    }

    // Hero slideshow content (homepage)
    match /heroSlides/{docId} {
      allow read, write: if true;
    }

    // Admin allowlist: document per admin, id = auth UID
    match /admins/{uid} {
      // Allow any signed-in user to read admin markers (clients only ever read their own doc)
      // This avoids intermittent request.auth propagation issues across environments
      allow read: if request.auth != null;
      // Writes managed out-of-band via console/CLI
      allow write: if false;
    }

    // Shop items (public read, restricted write)
    match /shopMerchandise/{docId} {
      allow read: if true;
      allow write: if true; // TODO: restrict to admins
    }

    // deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}


