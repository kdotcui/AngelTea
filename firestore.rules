rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // DEV RULES - replace with auth/App Check based rules for production
    match /popularDrinks/{docId} {
      allow read, write: if true;
    }

    // Hero slideshow content (homepage)
    match /heroSlides/{docId} {
      allow read, write: if true;
    }

    // Admin allowlist: document per admin, id = auth UID
    match /admins/{uid} {
      // Allow signed-in users to read their own admin marker
      allow read: if request.auth != null && request.auth.uid == uid;
      // Writes managed out-of-band via console/CLI
      allow write: if false;
    }

    // deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}


